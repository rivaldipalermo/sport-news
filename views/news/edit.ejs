<%- include('../includes/header'); %>

  <div class="container">
    <h1>Edit News</h1>
    <div class="row">
        <div class="col-lg-12">
            <form action="/news/<%= news.id %>?_method=put" method="POST">
                <div class="form-group">
                  <label>Title</label>
                  <input type="text" class="form-control" value="<%= news.news_title %> " name="title">
                </div>
                <div class="form-group mb-3">
                  <label>Content</label>
                  <textarea class="form-control" name="content"><%= news.news_content %></textarea>
                </div>
                <div class="form-group mb-3">
                  <label for="category">Category </label>

                <select class="form-control form-control" name="category">
                  <option disabled="true" selected="selected">Select Category</option>
                  <% categories.forEach(category=>{
                    %>
                    <option value="<%= category.id %>" <%= news.Category.category_name ==category.category_name &&"selected" %>>
                      <%= category.category_name %>
                    </option>
                    <% }) %>
                      }) %>
                </select>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-warning">RESET</button>
              </form>
        </div>
    </div>
  </div>

  <%- include('../includes/footer'); %>